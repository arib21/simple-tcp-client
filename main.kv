MDBoxLayout:
    orientation: "vertical"

    MDToolbar:
        title: "Simple TCP Client"
        right_action_items: [["github", lambda x: app.open_github()]]
        height: "45dp"

    FloatLayout:
        spacing: "8dp"
        padding: "8dp"
        MDTextField:
            id: server_ip
            hint_text: "Server IP"
            pos_hint: {'x': 0.05, 'top': 0.98}
            size_hint: (0.9, 0.1)

        MDTextField:
            id: server_port
            hint_text: "Server Port"
            pos_hint: {'x': 0.05, 'top': 0.87}
            size_hint: (0.9, 0.1)
            input_filter: 'int'
            max_text_length: 5

        MDRectangleFlatButton:
            pos_hint: {'x': 0.05, 'top': 0.75}
            size_hint: (0.45, 0.05)
            text: "Connect"
            on_release: app.connect(server_ip, server_port, disconnect_btn)

        MDRectangleFlatButton:
            id: disconnect_btn
            pos_hint: {'x': 0.5, 'top': 0.75}
            size_hint: (0.45, 0.05)
            text: "Disconnect"
            theme_text_color: "Custom"
            text_color: 1, 0, 0, 1
            line_color: 1, 0, 0, 1
            disabled: True
            on_release: app.disconnect(server_ip, server_port, disconnect_btn)
        
        MDFloatingActionButtonSpeedDial:
            data: {"Save":"content-save", "Import":"import"}
            icon: "menu"
            root_button_anim: False
            callback: app.action_button_sorter